<h1>Editing Book</h1>

<% if @book.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
    <h2><%= @book.errors.count %> errors prohibited this book from being saved:</h2>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model:@book,url:update_book_path(@book.id),method: :patch,local:true do |f| %>

  <div class="field">
    <%= f.label:title,"Title" %>
    <%= f.text_field:title %>
  </div>

  <div class="field">
    <%= f.label:body,"Body" %>
    <%= f.text_area:body %>
  </div>

  <div class="actions">
    <%= f.submit'Update Book' %>
  </div>


<% end %>

<a class="show_id" href="/books/<%= @book.id %>">Show</a>
